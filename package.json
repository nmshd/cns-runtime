{
    "name": "@nmshd/runtime",
    "version": "2.0.0-alpha.4",
    "description": "The Enmeshed client runtime.",
    "homepage": "https://enmeshed.eu",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "lib-web/nmshd.runtime.js",
        "lib-web/nmshd.runtime.min.js",
        "lib-web/nmshd.runtime.js.map",
        "lib-web/nmshd.runtime.min.js.map",
        "ui5.yaml"
    ],
    "scripts": {
        "build": "npm run build:node && npm run bundle",
        "build:ci": "npm run build:node && .ci/writeBuildInformation.sh && npm run bundle",
        "build:node": "npm run build:schemas && tsc -p tsconfig.json",
        "build:schemas": "node scripts/buildSchemas.js",
        "bundle": "npm run bundle:lib && npm run bundle:min",
        "bundle:lib": "webpack --stats-all --config webpack.config.js",
        "bundle:min": "webpack --stats-all --config webpack.min.config.js",
        "cdep": "tsc && madge --circular dist",
        "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
        "lint:eslint": "eslint --ext .ts ./src ./test",
        "lint:prettier": "prettier --check .",
        "lint:tsc": "tsc --noEmit && tsc -p test/tsconfig.json --noEmit",
        "test:ci:lokijs": "USE_LOKIJS=true jest -i",
        "test:ci:mongodb": "CONNECTION_STRING='mongodb://127.0.0.1:27017/?readPreference=primary&appname=runtime&ssl=false' jest -i",
        "test:local": "npm run test:local:mongodb && npm run test:local:lokijs",
        "test:local:lokijs": "USE_LOKIJS=true jest",
        "test:local:mongodb": ". scripts/testSetup.sh && jest",
        "test:local:teardown": "docker-compose -f test/docker-compose.yml down -v"
    },
    "jest": {
        "maxWorkers": 1,
        "preset": "ts-jest",
        "setupFilesAfterEnv": [
            "@alex_neo/jest-expect-message",
            "./test/customMatchers.ts"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "test/tsconfig.json"
            }
        },
        "testEnvironment": "node",
        "testTimeout": 60000
    },
    "dependencies": {
        "@js-soft/docdb-querytranslator": "1.0.1",
        "@js-soft/logging-abstractions": "1.0.0",
        "@js-soft/ts-serval": "2.0.3",
        "@js-soft/ts-utils": "^1.1.2",
        "@nmshd/consumption": "2.0.0-alpha.9",
        "@nmshd/content": "2.0.0-alpha.13",
        "@nmshd/crypto": "2.0.1",
        "@nmshd/transport": "2.0.0-alpha.1",
        "ajv": "^8.11.0",
        "ajv-errors": "^3.0.0",
        "ajv-formats": "^2.1.1",
        "fluent-ts-validator": "3.0.3",
        "json-stringify-safe": "^5.0.1",
        "luxon": "^2.4.0",
        "qrcode": "1.5.0",
        "reflect-metadata": "0.1.13",
        "ts-simple-nameof": "1.3.1",
        "typescript-ioc": "3.2.2"
    },
    "devDependencies": {
        "@alex_neo/jest-expect-message": "^1.0.5",
        "@js-soft/docdb-access-loki": "1.0.2",
        "@js-soft/docdb-access-mongo": "1.0.5",
        "@js-soft/eslint-config-ts": "^1.5.2",
        "@js-soft/license-check": "1.0.4",
        "@js-soft/node-logger": "1.0.1",
        "@types/jest": "^27.5.1",
        "@types/jest-expect-message": "^1.0.3",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/luxon": "^2.3.2",
        "@types/node": "^17.0.33",
        "@types/qrcode": "^1.4.2",
        "@types/qs": "^6.9.7",
        "eslint": "^8.15.0",
        "jest": "^28.1.0",
        "madge": "^5.0.1",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.2",
        "ts-json-schema-generator": "^1.0.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.6.4",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
